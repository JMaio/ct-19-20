{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ant: build",
            "type": "shell",
            "command": "ant build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "run all tests",
            "type": "shell",
            "command": "python py-tester/main.py",
            "group": {
                "kind": "test",
                "isDefault": true,
            },
            "dependsOn": "ant: build"
        },
        {
            "label": "test ast",
            "type": "shell",
            "command": "java -cp bin Main -ast tests/fibonacci.c ast.c-ast > tests/ast.c-ast",
            "group": "test",
            "dependsOn": "ant: build",
        }
    ]
}